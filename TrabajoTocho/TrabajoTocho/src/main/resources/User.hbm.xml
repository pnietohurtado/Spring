<hibernate-mapping>
    <class name="com.trabajoTocho.TrabajoTocho.modelo.User" table="User">
        <meta attribute="class-description">
            Clase encargada de llevar un registro de todos los usuarios de la red social
        </meta>

        <id name="id" type="int" column="id_user">
            <generator class="native"/>
        </id>

        <property name="username" type="string" column="username"/>
        <property name="password" type="string" column="password"/>
        <property name="lastConnection" type="string" column="lastConnection"/>
        <property name="timeLastConnection" type="int" column="timeLastConnection"/>

        <one-to-one name="profile"
                    class="com.trabajoTocho.TrabajoTocho.modelo.Profile"
                    cascade="all"
                    property-ref="user"/>

    </class>
</hibernate-mapping>