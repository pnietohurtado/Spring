<hibernate-mapping>
    <class name="com.trabajoTocho.TrabajoTocho.modelo.Profile" table="Profile">
        <meta attribute="class-description">
            Clase encargada de llevar un registro de todos los usuarios de la red social
        </meta>

        <id name="id" type="int" column="id_profile">
            <generator class="native"/>
        </id>

        <many-to-one name="user" class="com.trabajoTocho.TrabajoTocho.modelo.User" column="id_user" unique="true" not-null="true" cascade="none"/>
        <bag name="posts" table="collaborator" cascade="save-update" inverse="false">
            <key column="id_profile"/>
            <many-to-many class="com.trabajoTocho.TrabajoTocho.modelo.Post" column="id_post"/>
        </bag>
        <property name="numberFollowers" type="int" column="numberFollowers"/>
        <property name="description" type="string" column="description"/>

    </class>
</hibernate-mapping>